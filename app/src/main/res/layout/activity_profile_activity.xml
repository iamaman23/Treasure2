<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showAsAction="always"
    tools:context="com.example.hp.treasure2.profile_activity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/untitled"
        android:onClick=""/>


    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:onClick="butgetdetails"
        app:srcCompat="@drawable/detailsbtncutt" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageButton6"
        android:layout_marginTop="24dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:onClick="butlogout"
        app:srcCompat="@drawable/logoutbtncutt" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton6"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:onClick="butgameplay"
        app:srcCompat="@drawable/gcbtncutt" />


</RelativeLayout>
